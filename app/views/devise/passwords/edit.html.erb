<div class="row" align="center">
  <div class="col-xs-12 col-md-offset-4 col-md-4">
             <div class="contact-form contact-form-box border mt-30 mb-30">
             <h5 align="center">Changer de mot de passe</h5><br>
                      
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, :class => "mt-30") do |f| %>
                      <%= devise_error_messages! %>
                          <div class="form-group">
                              <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control", :placeholder => "Mot de passe"%>
                          </div>

                          <div class="form-group">
                              <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirmation de mot de passe"%>
                          </div>


                          <%= f.submit "Changer de mot de passe", :id => "submit", :class => "btn btn-primary col-md-12 btn-lg text-center float-right", style: "margin-bottom: 20px;"%>

                          <%= render "devise/shared/links" %>
                      <% end %>
              </div>                
  </div>
</div>


