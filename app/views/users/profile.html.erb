 <div class="container">
             
     <h1> Bienvenue, <%=@user.name%></h1>
           
        <section id = "profile">

            <div class="row ">

                <div class="post">
                   
                        <div class=" post-content">

                            <div class="post-header">
                               <div class = "row">
                                  <div class = "headtitle">
                                    <h2>Vos informations</h2>                                 
                                  </div>

                                  <div class = "col-xs-5 col-md-4">
                                    <% if @user.avatar? %>
                                      <%= image_tag @user.avatar.url, :class => "post-user mb-30", :id => "avatar"%>  
                                    <% else %>
                                      <%= image_tag "default_avatar.jpeg" %>
                                    <% end %>
                                      <%=link_to edit_user_path(@user) do%>
                                       <span class="icon ti-pencil"></span>
                                     <% end %>
                              
                                  </div>

                                  <div class = "col-xs- col-md-offset-1 col-md-3">
                                    <h3><%= @user.name %></h3>
                                    
                                    <h4><%= @user.address%></h4> 
                                    <h4><%=@user.postal_code %><h4>
                                    <p>Votre adresse exacte n'est pas communiquée aux autres membres, seul votre code postal l'est.</p>  
                                  </div> 
                                  <div class = "col-xs-1 col-md-1">
                                    <%=link_to edit_user_path(@user) do%>
                                       <span class="icon ti-pencil"></span>
                                     <% end %>
                                  </div>

                               </div>

                               <div class = "row">
                                   <div class = "col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8">
                                     <%unless  @user.bio %>
                                        <p> Ecrivez un petit texte pour vous présenter !</p>
                                     <%else%>
                                        <p><%= @user.bio %></p>
                                     <%end %>
                                     
                                   </div>
                                    <div class = "col-xs-2 col-md-1">
                                    <%=link_to edit_user_path(@user) do%>
                                       <span class="icon ti-pencil"></span>
                                     <% end %>
                                     
                                   </div>                                  
                               </div>                  
                            </div>
                        </div>
                 
                </div>
            </div>
        </section>

        <section id="recoshow">
            <div class = "row headtitle">
                <h2> Vos recommandations</h2>
            </div>
   
            <div class="row mt-30">
                <% @reviews.each do |review| %>
                 
                    <div class="col-md-4 wow fadeInLeft">
                        <div class="services-box text-center shadow">
                                    <%=link_to edit_review_path(review) do%>
                                       <span class="icon ti-pencil"></span>
                                     <% end %>
                                      <%=link_to(review, method: :delete, data: { confirm: 'Etes vous sûr ?' }) do%>
                                       <span class="icon ti-trash"></span>
                                     <% end %>
                            
                            <h4><%=review.book_title%> </h4>
                            <h5><%=review.book_author%></h5>
                            <%if review.book_cover%>
                              <%= image_tag(review.book_cover, :class => "cover_profile")%> 
                            <% end %>
                            <a href="#" class="btn btn-margin btn-default btn-lg" data-toggle="modal" data-target="#profile-0<%=review.id%>">Lire +</a>

                        </div>
                    </div>
                <% end %>
            <% if @reviews.count <3 %>
                   <%(3-@reviews.count).times do%>

                     <div class="col-md-4 wow fadeInLeft">
                        <div class="services-box text-center shadow">
                            <span class="icon"> + </span>
                            <h4>Ajouter une recommandation</h4>
                            <p class="fixed-height">Faite découvrir un de vos livres préférez
                            </p>
                            <%=link_to 'Ajouter +', new_review_path, class: "btn btn-margin btn-default btn-lg"%>
                           
                        </div>
                      </div> 
                    <%end%>            
             <%end %>            
            </div>


                <!-- / SERVICE MODAL -->
            <% @reviews.each do |review| %>
            
                <div id="profile-0<%=review.id%>" class="modal fade services-modal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content shadow">
                            <a class="close" data-dismiss="modal"><span class="ti-close"></span></a>
                            <div class="modal-body">
                                <div class="post-entry post-entry-modal">

                                    <div class="services-box text-center">
                                        <span class="icon"># <%=@j%></span>
                                        <h4>La recommandation de <%=@user.name%></h4>
                                        <h3><%=review.book_title%>, <%=review.book_author%></h3>
                                        <p>Genre : <%=review.book_category%>
                                        </p>
                                    </div>
                                    <p><%=review.body%></p>                                    
                                   <%if review.book_cover%>
                                     <%= image_tag(review.book_cover, :class => "cover_profile")%> 
                                     
                                   <%end %>                                  
                               </div>
                            </div>
                        </div>
                    </div>
                </div>
            <%end%>
            

        </section>

