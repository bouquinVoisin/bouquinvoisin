<div align="center">

<h3>Ecrire un message</h3><br>

	<%= form_for @message, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	  <%= label_tag 'Quel est ton message :' %>
	  <%= f.text_area :body, cols: "40", rows: "3" %><br><br>
	  <%= f.submit "Envoie ton message", class: "btn btn-info" %>

	  <% if @message.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@message.errors.count, "error") %> prohibited
	        this message from being saved:
	      </h2>
	      <ul>
	        <% @message.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
    <% end %>

</div>